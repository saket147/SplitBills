<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="music.sokanch.com.splitbills.AddBill">

    <TextView
        android:id="@+id/add_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD BILL"
        app:layout_constraintRight_toLeftOf="@+id/enter_amount"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/enter_amount"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="18dp" />

    <TextView
        android:id="@+id/amount_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        app:layout_constraintRight_toLeftOf="@+id/enter_amount"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="18dp"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/enter_amount" />

    <EditText
        android:id="@+id/enter_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_person_name"
        android:layout_width="90dp"
        android:layout_height="18dp"
        android:text="Select Person"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/save"
        android:layout_marginTop="182dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="183dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="46dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="46dp"
        app:layout_constraintRight_toLeftOf="@+id/spinner"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.424" />

    <TextView
        android:id="@+id/paid_by_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paid By You"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/select_person_name"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="190dp"
        app:layout_constraintLeft_toLeftOf="@+id/select_person_name"
        app:layout_constraintHorizontal_bias="1.0" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/paid_by_you"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/paid_by_you"
        android:layout_marginLeft="26dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:text="Save"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox"
        android:layout_marginLeft="-44dp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="379dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="153dp"
        android:layout_height="26dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="41dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox"
        android:layout_marginTop="136dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="136dp"
        app:layout_constraintLeft_toLeftOf="@+id/enter_amount"
        app:layout_constraintTop_toTopOf="@+id/add_bill"
        android:layout_marginLeft="46dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
